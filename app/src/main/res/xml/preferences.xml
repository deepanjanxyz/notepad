<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="Appearance">
        <ListPreference
            app:key="pref_theme"
            app:title="Theme"
            app:summary="Change app appearance"
            app:defaultValue="system"
            app:entries="@array/theme_entries"
            app:entryValues="@array/theme_values" />
    </PreferenceCategory>

    <PreferenceCategory app:title="Security">
        <SwitchPreferenceCompat
            app:key="pref_lock"
            app:title="Use Device Lock"
            app:summary="Unlock using Fingerprint or PIN"
            app:defaultValue="false" />
    </PreferenceCategory>

    <PreferenceCategory app:title="About Developer">
        <Preference
            app:key="pref_github"
            app:title="GitHub"
            app:summary="View Source Code"
            app:icon="@drawable/ic_github" />
        <Preference
            app:key="pref_youtube"
            app:title="YouTube"
            app:summary="Subscribe to my channel"
            app:icon="@drawable/ic_youtube" />
        <Preference
            app:key="pref_facebook"
            app:title="Facebook"
            app:summary="Follow me on Facebook"
            app:icon="@drawable/ic_facebook" />
        <Preference
            app:key="pref_instagram"
            app:title="Instagram"
            app:summary="Follow me on Instagram"
            app:icon="@drawable/ic_instagram" />
    </PreferenceCategory>
</PreferenceScreen>
